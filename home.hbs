<section class="home">
  <header>
    <div class="container">
      <h2>Latest Posts</h2>
    </div>
  </header>
  <div class="container card-group posts">
    {{#get "posts" limit="5" filter="tags:-routes" include="tags,authors"}}
      {{#foreach posts}}
        {{#if @first}}
          {{> "post-card" large=true}}
        {{else}}
          {{> "post-card"}}
        {{/if}}
      {{/foreach}}
    {{/get}}
  </div>
</section>

{{#get "posts" limit="5" filter="tags:routes" }}
  {{#if posts}}
    <section class="home">
      <header>
        <div class="container">
          <h2>Favorite Routes</h2>
        </div>
      </header>
      <div class="container card-group posts">
        {{#foreach posts}}
          {{#if @first}}
            {{> "route-card" large=true}}
          {{else}}
            {{> "route-card"}}
          {{/if}}
        {{/foreach}}
      </div>
    </section>
  {{/if}}
{{/get}}
