{{!< default}}
{{!-- inject everything in this file into the {body} of default.hbs --}}

{{#if @blog.cover_image}}
  <header style="background-image: url({{@blog.cover_image}});">
{{else}}
  <header>
{{/if}}
  {{#if @site.logo}}
    <img class="header-logo" src="{{@site.logo}}" />
  {{else}}
    <div>
      <h2>{{@site.title}}</h2>
      <p>{{@site.description}}</p>
    </div>
  {{/if}}
</header>

{{#get "pages" slug="about" as |page|}}
  {{#if page}}
    {{#page}}
      <section class="about">
        <div class="container">
          {{content}}
        </div>
      </section>
    {{/page}}
  {{/if}}
{{/get}}

