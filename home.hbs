  <h2>Blog</h2>
  <div class="card-group posts">
    {{#get "posts" limit="5"}}
      {{#foreach posts}}
        {{#if @first}}
          {{> "post-card" large=true}}
        {{else}}
          {{> "post-card"}}
        {{/if}}
